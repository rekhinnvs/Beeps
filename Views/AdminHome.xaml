<Window x:Class="Beeps.Views.AdminHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beeps"
        mc:Ignorable="d"
        Title="AdminHomePage" Height="500" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>

        <Canvas Background="AliceBlue" Margin="27,27,23.6,65.4"/>
        <UniformGrid DockPanel.Dock="Bottom" Margin="5" Rows="1" HorizontalAlignment="Center"
            VerticalAlignment="Bottom">

            <Button Grid.Column="0" Content="New Tender" Margin="5" Padding="50,3 "/>
            <Button Grid.Column="1" Content="View Tender" Margin="5" Padding="6,3"/>
            <Button Grid.Column="2" Content="Repair Requeste" Margin="5" Padding="6,3"/>

        </UniformGrid>

    </Grid>
</Window>
